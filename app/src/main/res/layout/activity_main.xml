<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4090E08"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputEquation"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/equation"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="#25FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="Deprecated" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Welcome to Calculator"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="764dp"
        android:layout_marginTop="128dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEquation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BackPosBtn"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#1c690b"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="BackPosBtnClicked"
                android:text="←"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/NextPosBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#1c690b"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="NextPosBtnClicked"
                android:text="→"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num8Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="8"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/num9Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="9"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="+"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="backBtnClicked"
                android:text="⌫"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num6Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="6"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/num7Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="7"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="-"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/modBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="%"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="4"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/num5Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="5"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/multBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="*"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/openBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="("
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num2Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="2"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/num3Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="3"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/divBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="/"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text=")"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num0Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="0"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/num1Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#99af91"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="1"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/dotBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#586852"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="keyPadBtnClicked"
                android:text="."
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/calcBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#46da1f"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="evalBtnClicked"
                android:text="="
                android:textSize="24sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nextNumBtn"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#1c690b"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="spaceBtnClicked"
                android:text="Space"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#1c690b"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="clearBtnClicked"
                android:text="Clear"
                android:textColor="#2dd20d"
                android:textSize="24sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/outputEquation"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:autofillHints=""
            android:background="@android:color/transparent"
            android:clickable="true"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/equation"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textColorHint="#25FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="Deprecated" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>